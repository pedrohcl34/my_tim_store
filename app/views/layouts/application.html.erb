<!DOCTYPE html>
<html>
<head>

  
  <meta charset="utf-8">
  <title>My Tim Store</title>
  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  
  <link rel="icon" type="image/png" href="images/favicon.png">
  
  <%= stylesheet_link_tag    'normalize', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'skeleton',  media:  'all', 'data-turbolinks-track'=>  true %>
  <%= stylesheet_link_tag    'adipoli',  media:  'all', 'data-turbolinks-track'=>  true %>
  <%= stylesheet_link_tag    'styles-modified',  media:  'all', 'data-turbolinks-track'=>  true %>
  <%= javascript_include_tag 'jquery-1.11.1', 'data-turbolinks-track'=> true %>
  <%= javascript_include_tag 'jquery.adipoli.min', 'data-turbolinks-track'=> true %>
  <%= javascript_include_tag 'jssor', 'data-turbolinks-track'=> true %>
  <%= javascript_include_tag 'jssor.slider.min', 'data-turbolinks-track'=> true %>
  <%= javascript_include_tag 'jquery-1.9.1.min', 'data-turbolinks-track'=> true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



  <div class="container">
    <%=form_tag search_results_path, method: 'get' do %>
      <div class="row">
        <div class="four columns">
          <label for="productSearch">Search Product</label>
          <input class="u-full-width" type="text" placeholder="Product" id="productSearch" name="productSearch">
          <input class="button-primary" type="submit" value="Search Product">
        </div>
        <div class="four columns">
          
          <label for="searchCategories">Filtered by category</label>
          <select class="u-full-width" id="searchCategories" name="searchCategories">
            <option value="All">All</option>
            <% @categories.each do |category| %>
            <option value="<%=category.id%>"><%=category.name%></option>
            <% end %>
          </select>
          
        </div>
        <div class="four columns">
          <%= link_to 'Admin area' , admin_user_session_path %>
        </div>
      </div>
    <% end %>
    <%= yield %>
    <script type="text/javascript">
    //image
         $(function(){
                $('.row1').adipoli({
                    'startEffect' : 'normal',
                    'hoverEffect' : 'popout'
                });
            });
    </script>
  </div>


</body>
    
</html>
