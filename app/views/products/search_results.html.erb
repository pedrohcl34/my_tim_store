<h2>Search Results</h2>
<%= paginate @found_products %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @found_products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.description %></td>
        
        <td> <aside id="comment"><%= link_to image_tag(product.image,:size=>'240', :class=>'img-style row1'), product %></aside></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

