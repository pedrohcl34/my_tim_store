<h1>Listing products</h1>
<%= paginate @products %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= link_to image_tag(product.image,:size=>"240"), product %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

